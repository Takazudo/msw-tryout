{
  "name": "msw-tryout",
  "version": "1.0.0",
  "description": "MSW tryout with Netlify Functions and Next.js",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev:app & pnpm run dev:api",
    "dev:app": "cd app && pnpm run dev",
    "dev:doc": "cd doc && pnpm start",
    "dev:api": "netlify dev",
    "build": "cd app && pnpm run build",
    "build:app": "cd app && pnpm run build",
    "build:doc": "cd doc && pnpm run build",
    "start": "netlify dev",
    "kill": "lsof -ti:3000,3200,8888,9999 | xargs kill -9 2>/dev/null || echo 'No processes found on ports 3000, 3200, 8888, 9999'",
    "b4push": "./scripts/b4push.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "app/**/*.{ts,tsx}": [
      "bash -c 'cd app && pnpm exec eslint --fix \"${0#app/}\"'",
      "bash -c 'cd app && pnpm exec prettier --write \"${0#app/}\"'"
    ],
    "app/**/*.{js,jsx,json,css}": [
      "bash -c 'cd app && pnpm exec prettier --write \"${0#app/}\"'"
    ],
    "netlify/functions/**/*.js": [
      "pnpm exec prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.21.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "netlify-cli": "^17.0.0"
  }
}
