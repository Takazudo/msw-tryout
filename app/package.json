{
  "name": "msw-gallery-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!__inbox/**\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!__inbox/**\"",
    "check": "npm run typecheck && npm run lint && npm run format",
    "check:fix": "npm run lint:fix && npm run format:fix",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/e2e.spec.ts",
    "b4push": "../scripts/b4push-quick.sh",
    "b4push:full": "../scripts/b4push.sh",
    "b4push:quick": "../scripts/b4push-quick.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write"
    ],
    "*.{json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "blurhash": "^2.0.5",
    "next": "^15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9",
    "eslint-config-next": "^15.1.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
