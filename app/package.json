{
  "name": "msw-gallery-app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "scripts": {
    "dev": "next dev --port 3200",
    "dev:mock": "NEXT_PUBLIC_ENABLE_MSW=true next dev --port 3200",
    "build": "next build",
    "start": "next start --port 3200",
    "serve": "pnpm dlx serve@latest out -l 3200",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!__inbox/**\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css}\" \"!node_modules/**\" \"!.next/**\" \"!out/**\" \"!__inbox/**\"",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format",
    "check:fix": "pnpm run lint:fix && pnpm run format:fix",
    "test:e2e": "playwright test --config=playwright-msw.config.ts",
    "test:e2e:msw": "playwright test --config=playwright-msw.config.ts",
    "test:e2e:real": "playwright test tests/e2e-real.spec.ts",
    "test:e2e:ui": "playwright test --ui --config=playwright-msw.config.ts",
    "test:e2e:debug": "playwright test --debug --config=playwright-msw.config.ts",
    "test:smoke": "playwright test tests/e2e-real.spec.ts",
    "b4push": "../scripts/b4push-quick.sh",
    "b4push:full": "../scripts/b4push.sh",
    "b4push:quick": "../scripts/b4push-quick.sh"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@netlify/classnames-template-literals": "^1.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "blurhash": "^2.0.5",
    "next": "^15.1.5",
    "postcss-nested": "^7.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9",
    "eslint-config-next": "^15.1.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "msw": "^2.12.1",
    "prettier": "^3.6.2",
    "typescript": "^5"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
